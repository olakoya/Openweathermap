{
  "name": "openweathermap-api-tests",
  "version": "1.0.0",
  "description": "Automated test suite for OpenWeatherMap API",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "tsc",
    "clean": "rimraf dist coverage test-results"
  },
  "keywords": [
    "api",
    "testing",
    "automation",
    "openweathermap",
    "typescript",
    "jest"
  ],
  "author": "Test Automation Framework",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "dotenv": "^16.6.1"
  }
}
